@model AddUserViewModel
@{
    ViewData["Title"] = "Create User";
}

<!-- Formatting -->
<div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        <div class="card border border-dark">
            <h1 class="card-header text-center">Create New User</h1>
            <div class="card-body">
                <!-- Form for adding user -->
                <form asp-controller="UserManagement" asp-action="AddUser" method="post">
                    <div class="form-group">
                        <label asp-for="UserName">Username</label>
                        <!-- Calls method for sending username to the database -->
                        <input class="form-control form-control-lg" placeholder="Username" id="LoginUsername" asp-for="UserName" required></input>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <!-- Calls method for sending email to the database -->
                        <input class="form-control form-control-lg" placeholder="Email" id="LoginEmail" type="email" asp-for="Email"></input>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <!-- Calls method for sending password to the database-->
                        <input class="form-control form-control-lg" placeholder="Password" id="LoginPassword" type="password" asp-for="Password" required></input>
                    </div>

                    <!-- Confirm password validation -->
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <!-- Calls method for ensuring input is the same as password in previous form group -->
                        <input class="form-control form-control-lg" placeholder="Confirm Password" id="ConfirmLoginPassword" type="password" asp-for="ConfirmPassword" required></input>
                    </div>

                    <div class="form-group">
                        <label asp-for="RoleName">Select Role:</label>
                        <!-- Calls method for sending role of new user to the database -->
                        <select class="form-control form-control-lg" asp-for="RoleName">
                            <!-- Gets list of roles available to be selected from, from the model -->
                            @foreach (var role in Model.AllRoles)
                            {
                                <option>@role.RoleName</option>
                            }
                        </select>
                    </div>

                    <!-- Button for submitting the above form data to the database -->
                    <button class="btn btn-primary" style="width:100%" type="submit"><h2>Create</h2></button>
                </form>
            </div>
        </div>
    </div>
    <!-- Formatting -->
    <div class="col-md-3">
        <!-- If stored error message in model is not empty -->
        @if (Model.ErrorMessage != "")
        {
            <!-- Show red error message from model -->
            <div class="alert alert-danger" role="alert">
                <p>@Model.ErrorMessage</p>
            </div>
        }

    </div>
</div>