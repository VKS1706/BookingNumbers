
@{
    ViewData["Title"] = "Modify Project";
}
@model BookingNumbers.Tools.ModifyProjectViewModel


<!-- Formatting -->
<div class="row">
    <div class="col-md">
        <div class="card">
            <!-- Header -->
            <h1 class="card-header">Modify Project</h1>
            <!-- Form to send data for modifying a project -->
            <form asp-controller="ProjectManagement" asp-action="ModifyProject">
                <div class="card-body">


                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <!-- Input for updating the title in the viewmodel  -->
                        <input asp-for="Title" class="form-control" value="@Model.Title" />
                    </div>

                    <div class="form-group">
                        <label asp-for="BookingNumber">Booking Number</label>
                        <!-- Input for updating the booking number in the viewmodel -->
                        <input asp-for="BookingNumber" class="form-control" type="number" min="1000" max="9999" value="@Model.BookingNumber" readonly="" />
                    </div>
                    <hr />

                    <div class="form-group">
                        <label asp-for="Body">Description</label>
                        <!-- Input for updating the description in the viewmodel -->
                        <textarea asp-for="Body" class="form-control" col="50" row="5">@Model.Body</textarea>
                    </div>

                </div>
                <div class="card-footer">
                    <!-- Button to submit changes via the form to the database -->
                    <button class="btn btn-warning w-25">Modify Project</button>
                </div>

            </form>
        </div>
    </div>
</div>